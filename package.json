{
	"name": "gleece-extension",
	"displayName": "Gleece",
	"description": "The Gleece extension for Visual Studio Code",
	"version": "1.0.2",
	"publisher": "haim-kastner",
	"author": {
		"name": "Haim Kastner",
		"email": "hello@haim-kastner.com"
	},
	"contributors": [
		{
			"name": "Yuval Pomerchik"
		}
	],
	"icon": "resources/logo.jpg",
	"license": "MIT",
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Programming Languages",
		"Visualization"
	],
	"keywords": [
		"go",
		"golang",
		"annotation",
		"documentation",
		"gleece",
		"API",
		"Rest API"
	],
	"main": "./dist/extension.js",
	"repository": {
		"type": "git",
		"url": "git://github.com/gopher-fleece/gleece-vscode-extension.git"
	},
	"bugs": {
		"url": "https://github.com/gopher-fleece/gleece-vscode-extension/issues"
	},
	"homepage": "https://github.com/gopher-fleece/gleece-vscode-extension#readme",
	"scripts": {
		"compile": "webpack",
		"watch": "npm run compile && webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"lint:fix": "eslint src --ext ts --fix",
		"vscode:prepublish": "npm run package",
		"vscode:package": "vsce package",
		"vscode:publish": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/lodash.debounce": "^4.0.9",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.10.0",
		"@types/vscode": "^1.80.0",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"@vscode/test-electron": "^2.3.8",
		"@vscode/vsce": "^3.2.1",
		"eslint": "^8.56.0",
		"glob": "^10.3.10",
		"mocha": "^10.2.0",
		"ts-loader": "^9.5.1",
		"typescript": "^5.3.3",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"@flatten-js/interval-tree": "^1.1.3",
		"json5": "^2.2.3",
		"lodash.debounce": "^4.0.8",
		"simple-git": "^3.22.0"
	},
	"contributes": {
		"languages": [
			{
				"id": "go",
				"aliases": [
					"Go",
					"golang"
				],
				"extensions": [
					".go"
				]
			}
		],
		"grammars": [
			{
				"path": "./syntaxes/gleece.tmLanguage.json",
				"scopeName": "gleece-annotations.injection",
				"injectTo": [
					"source.go"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "Gleece Extension Configuration",
			"properties": {
				"gleece.config.path": {
					"type": "string",
					"default": "./gleece.config.json",
					"description": "Path to the project's gleece.config.json"
				},
				"gleece.analysis.mode": {
					"type": "string",
					"enum": [
						"full",
						"differential"
					],
					"default": "full",
					"description": "Specifies the analysis mode.",
					"enumDescriptions": [
						"Full scan: Analyzes the entire code file on every change. Robust but more resource intensive",
						"Differential scan: Analyzes only changed code region. Faster but may be more error prone"
					]
				}
			}
		},
		"commands": [
			{
				"command": "gleece.reAnalyzeFile",
				"title": "Gleece: Re-analyze current file",
				"when": "editorLangId == go"
			}
		]
	},
	"activationEvents": [
		"onLanguage:go",
		"onLanguage:golang"
	]
}